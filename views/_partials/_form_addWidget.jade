
h1 Add Widget

-if(screen_name)
	div(class="alert alert-danger alert-dismissable")
		button(type="button" class="close" data-dismiss="alert" aria-hidden="true")
		strong Screen Name! 
		= screen_name


form(method='POST', action='/screens/#{screen.id}/widgets/add', class="form-horizontal", role="form")
	.form-group
		label(for="widgets", class="col-sm-2 control-label") Select Multiple Widgets
		.col-sm-10
			select( multiple="true" type="input", class="form-control",name="widgets", id="widgets", placeholder="new screen name")
				-widgets.forEach(function(w){
					option(value="#{w.id}")
						=w.name
				-})

	.form-group
		div(class="col-sm-offset-2 col-sm-10")
			button( type="submit", class="btn btn-default") Submit 
